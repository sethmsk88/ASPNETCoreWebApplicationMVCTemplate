 @model HomeDetailsViewModel

@{
    var photoPath = "~/images/" + (Model.Student.PhotoPath ?? "student.png");
}

<div class="row justify-content-center m-3"
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Student.Name</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Student ID: @Model.Student.StudentId</h4>
                <h4>Email: @Model.Student.Email</h4>
                <h4>Branch: @Model.Student.Branch</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index"
                    class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Student.StudentId"
                    class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>